<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">新規会員登録</h5>
  <div class="row">
    <div class="col px-5 px-sm-0">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <%= f.label :name, "氏名", class: "col-sm-3 ml-md-4 col-form-label" %>
          <%= f.label :last_name, "(姓)", class: "col-sm-1 col-form-label" %>
          <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: "col-sm-3 px-0 mr-sm-4" %>
          <%= f.label :first_name, "(名)", class: "col-sm-1 col-form-label" %>
          <%= f.text_field :first_name, autofocus: true, placeholder: "道子", class: "col-sm-3 px-0"  %>
        </div>
        <div class="form-group row">
          <%= f.label :name_kana, "フリガナ", class: "col-sm-3 ml-md-4 col-form-label" %>
          <%= f.label :last_name_kana, "(セイ)", class: "col-sm-1 col-form-label" %>
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", class: "col-sm-3 px-0 mr-sm-4" %>
          <%= f.label :first_name_kana, "(メイ)", class: "col-sm-1 col-form-label" %>
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", class: "col-sm-3 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-3 ml-md-4 col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "col-sm-3 offset-sm-1 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-sm-3 ml-md-4 col-form-label" %>
          <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class: "col-sm-3 offset-sm-1 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :address, "住所", class: "col-sm-3 ml-md-4 col-form-label" %>
          <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-7 offset-sm-1 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-sm-3 ml-md-4 col-form-label" %>
          <%= f.text_field :telephone_number, autofocus: true, placeholder: "0000000000", class: "col-sm-3 offset-sm-1 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :password, "パスワード(6文字以上)", class: "col-sm-3 ml-md-4 col-form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3 offset-sm-1 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-3 ml-md-4 col-form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3 offset-sm-1 px-0" %>
        </div>
        <div class="form-group row">
          <div class="col-sm-3 ml-md-4"></div>
          <%= f.submit "新規登録", class: , class: "btn btn-success col-sm-3 offset-sm-1 px-0" %>
        </div>
      <% end %>
    </div>
  </div>



  <%= render "public/shared/links" %>
</div>