<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">注文履歴一覧</h5>
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td class="align-middle">
            〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td class="align-middle">
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br>
            <% end %>
          </td>
          <td class="align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>
          <td class="align-middle"><%= order.status_i18n %></td>
          <td class="align-middle"><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary px-2" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>