<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">注文情報確認</h5>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th class="col-5">商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-7 col-md-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-light">送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th class="table-light">商品合計</th>
            <td><%= @total.round.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="table-light">請求金額</th>
            <td><%= (@total.round+@order.postage).to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-3"><strong>支払い方法</strong></div>
    <div class="col-8"><%= @order.payment_method_i18n %></div>
  </div>
  <div class="row mb-4">
    <div class="col-3"><strong>お届け先</strong></div>
    <div class="col-8">
      〒<%= @order.postal_code %>
      <%= @order.address %><br>
      <%= @order.name %>
    </div>
  </div>
  <div class="text-center">
    <%= form_with model: @order, url: orders_path do |f| %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :name, :value => @order.name %>
      <%= f.hidden_field :postage, :value => @order.postage %>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %>
      <%=  f.submit "注文を確定する", class: "btn btn-success px-2" %>
    <% end %>
  </div>
</div>