<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">注文情報確認</h5>
  <div class="row">
    <div class="col-sm-7">
      <p class="mb-3"><strong>注文情報</strong></p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="col-3 table-light">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="col-3 table-light align-middle">配送先</th>
            <td>
              〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="col-3 table-light">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="col-3 table-light">ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-5">
      <p class="mb-3"><strong>請求情報</strong></p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="col-6 table-light">商品合計</th>
            <td><%= @total.round.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="col-6 table-light">配送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th class="col-6 table-light">ご請求額</th>
            <td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <p class="mb-3"><strong>注文内容</strong></p>
      <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th class="col-5">商品名</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.price.to_s(:delimited) %></td>
            <td><%= order_item.amount %></td>
            <td><%= order_item.subtotal.to_s(:delimited) %></td>
          </tr>
        <% end %>
      </tbody>
    </div>
  </div>
</div>