<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">ログイン</h5>
  <div class="row">
    <div class="col-sm-9 px-5 px-sm-0 ml-sm-5">
      <p class="d-inline-block bg-light my-4 px-3">会員の方はこちらからログイン</p>
      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-3 offset-sm-1 col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "col-sm-7 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :password, "パスワード", class: "col-sm-3 offset-sm-1 col-form-label " %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-7 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.submit "ログイン", class: "btn btn-primary col-sm-3 offset-sm-4 mt-3" %>
        </div>
      <% end %>
  </div>
  </div>
    <%= render "public/shared/links" %>
</div>