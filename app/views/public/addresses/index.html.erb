<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">配送先登録/一覧</h5>
  <div class="row">
    <div class="col px-5 px-sm-0">
      <%= form_with model: @address, url: addresses_path do |f|%>
        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :postal_code, placeholder: "0000000", class: "col-sm-4 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :address, "住所", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-7 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :name, "宛名", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :name, placeholder: "令和道子", class: "col-sm-4 px-0" %>
          <%= f.submit "新規登録", class: "btn btn-sm btn-success col-sm-2 offset-sm-3 mt-4 mt-sm-0" %>
        </div>
      <% end %>
    </div>
  </div>
  <table class="table table-bordered border-dark col-md-10 mt-5">
    <thead class="thead-light">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success px-2" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger px-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>