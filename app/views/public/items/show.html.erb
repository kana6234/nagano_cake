<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">商品詳細</h5>
</div>
<div class="container ml-md-4">
  <div class="row">
    <div class="col-md-6 col-lg-5">
      <%= image_tag @item.get_image(300, 300), class: "img-fluid pr-4" %>
    </div>
    <div class="col-md-6">
          <h3><%= @item.name %></h3>
          <p><%= @item.introduction %></p>
          <div class="row" style="padding-left:15px;">
            <h5>¥<%= @item.with_tax_price.to_s(:delimited) %></h5><small>(税込)</small>
          </div>
        <%= form_with model: @cart_item, url: cart_items_path do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :amount, *[1..100] %>
          <%= f.submit 'カートに入れる', class: "btn btn-sm btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>