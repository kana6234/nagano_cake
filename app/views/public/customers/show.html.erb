<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">マイページ</h5>
  <div class="mb-4">
    <strong>登録情報</strong>
    <%= link_to "編集する", customers_information_edit_path, class: "btn btn-sm btn-success ml-5 px-3" %>
  </div>
  <table class="table table-bordered border-dark">
    <tbody>
      <tr>
        <td class="col-3 table-light">氏名</td>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <td class="col-3 table-light">カナ</td>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td class="col-3 table-light">郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td class="col-3 table-light">住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="col-3 table-light">電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td class="col-3 table-light">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
  <div class="mb-4">
    <strong>配送先　</strong>
    <%= link_to "編集する", addresses_path, class: "btn btn-sm btn-primary ml-5 px-3" %>
  </div>
  <div class="mb-4">
    <strong>注文一覧</strong>
    <%= link_to "編集する", orders_path, class: "btn btn-sm btn-primary ml-5 px-3" %>
  </div>
</div>