<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3"><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</h5>
  <div class="row">
    <div class="col px-5 px-sm-0">
      <%= form_with model: @customer, url: customers_information_path do |f| %>
        <div class="form-group row">
          <%= f.label :name, "氏名", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :last_name, autofocus: true, id: "name", class: "col-sm-3 px-0 mr-sm-4" %>
          <%= f.text_field :first_name, autofocus: true, id: "name", class: "col-sm-3 px-0 mt-2 mt-sm-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :name_kana, "フリガナ", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :last_name_kana, autofocus: true, id: "name_kana", class: "col-sm-3 px-0 mr-sm-4" %>
          <%= f.text_field :first_name_kana, autofocus: true, id: "name_kana", class: "col-sm-3 px-0 mt-2 mt-sm-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :postal_code, autofocus: true, class: "col-sm-3 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :address, "住所", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :address, autofocus: true, class: "col-sm-8 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :telephone_number, "電話番号", class: "col-sm-3 col-form-label" %>
          <%= f.text_field :telephone_number, autofocus: true, class: "col-sm-3 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-3 col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3 px-0" %>
        </div>
        <div class="form-group row">
          <%= f.submit "編集内容を保存", class: "btn btn-success col-sm-3 offset-sm-3" %>
          <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger col-sm-2 offset-sm-3 mt-5 mt-sm-0" %>
        </div>
      <% end %>
    </div>
  </div>
</div>