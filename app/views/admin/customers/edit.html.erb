<h1><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</h1>

<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
  <div class="row">
  　<div class="col">
  　  会員ID
  　</div>
  　<div class="col">
  　  <%= @customer.id %>
  　</div>
  </div>

  <div>
    <%= f.label :name, "氏名" %>
    <%= f.text_field :last_name, autofocus: true, id: "name" %>
    <%= f.text_field :first_name, autofocus: true, id: "name" %>
  </div>
  <div>
    <%= f.label :name_kana, "フリガナ" %>
    <%= f.text_field :last_name_kana, autofocus: true, id: "name_kana" %>
    <%= f.text_field :first_name_kana, autofocus: true, id: "name_kana" %>
  </div>
  <div>
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  <div>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>
  <div>
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>
  <div>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div>
  <%= f.radio_button :is_deleted, "false" %>
  <%= f.label :is_deleted, "有効", for: "customer_is_deleted_false" %>
  <%= f.radio_button :is_deleted, "true" %>
  <%= f.label :is_deleted, "退会", for: "customer_is_deleted_true" %>
  </div>
  <div class="actions">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
<% end %>