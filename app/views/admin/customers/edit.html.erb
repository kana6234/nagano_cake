<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3"><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</h5>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
    <div class="form-group row">
      <div class="col-3 offset-sm-1 col-form-label">
        会員ID
      </div>
      <div class="pt-sm-2">
        <%= @customer.id %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :name, "氏名", class: "col-sm-3 offset-sm-1 col-form-label" %>
      <%= f.text_field :last_name, autofocus: true, id: "name", class: "col-sm-3 px-0 mr-5" %>
      <%= f.text_field :first_name, autofocus: true, id: "name", class: "col-sm-3 px-0" %>
    </div>
    <div class="form-group row">
      <%= f.label :name_kana, "フリガナ", class: "col-sm-3 offset-sm-1 col-form-label" %>
      <%= f.text_field :last_name_kana, autofocus: true, id: "name_kana", class: "col-sm-3 px-0 mr-5" %>
      <%= f.text_field :first_name_kana, autofocus: true, id: "name_kana", class: "col-sm-3 px-0" %>
    </div>
    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号", class: "col-sm-3 offset-sm-1 col-form-label" %>
      <%= f.text_field :postal_code, autofocus: true, class: "col-sm-3 px-0 mr-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-sm-3 offset-sm-1 col-form-label" %>
      <%= f.text_field :address, autofocus: true, class: "col-sm-8 px-0" %>
    </div>
    <div class="form-group row">
      <%= f.label :telephone_number, "電話番号", class: "col-sm-3 offset-sm-1 col-form-label" %>
      <%= f.text_field :telephone_number, autofocus: true, class: "col-sm-3 px-0" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-sm-3 offset-sm-1 col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3 px-0" %>
    </div>
    <div class="form-group row">
      <%= f.label :is_active, "販売ステータス", class: "col-sm-3 offset-sm-1 col-form-label" %>
      <div class="col-sm-5 pt-sm-2 px-0">
        <%= f.radio_button :is_deleted, "false" %>
        <%= f.label :is_deleted, "有効", for: "customer_is_deleted_false" %>
        <%= f.radio_button :is_deleted, "true" %>
        <%= f.label :is_deleted, "退会", for: "customer_is_deleted_true" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.submit "変更を保存", class: "btn btn-success col-sm-3 offset-sm-4" %>
    </div>
  <% end %>
</div>