<h1>注文履歴詳細</h1>
<% if @order.errors.any? %>
  <h3><%= @order.errors.count %> errors prohibited this obj from being saved:</h3>
<% end %>
<div class="row">
  <div class="col">
    <div class="row">
      <div class="col">購入者</div>
      <div class="col"><%= @order.customer.last_name+@order.customer.first_name %></div>
    </div>
    <div class="row">
      <div class="col">注文日</div>
      <div class="col"><%= @order.created_at.strftime('%Y/%m/%d') %></div>
    </div>
    <div class="row">
      <div class="col">配送先</div>
      <div class="col">
        〒<%= @order.postal_code %>
        <%= @order.address %><br>
        <%= @order.name %>
      </div>
    </div>
    <div class="row">
      <div class="col">支払い方法</div>
      <div class="col"><%= @order.payment_method_i18n %></div>
    </div>
    <div class="row">
      <div class="col">注文ステータス</div>
      <div class="col">
        <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
          <%= f.select :status, Order.statuses_i18n.invert %>
          <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
          <tr>
            <td>
              <%= order_item.item.name %>
            </td>
            <td>
              <%= order_item.price.to_s(:delimited) %>
            </td>
            <td>
              <%= order_item.amount.to_s(:delimited) %>
            </td>
            <td><%= order_item.subtotal.to_s(:delimited) %></td>
            <td>
              <%= form_with model: order_item, url: admin_order_item_path(order_item.id), method: :patch do |f| %>
                <%= f.select :making_status, OrderItem.making_statuses_i18n.invert %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col">
    <div class="row">
      <div class="col">商品合計</div>
      <div class="col">
        <%= @total.round.to_s(:delimited)%>円
      </div>
    </div>
    <div class="row">
      <div class="col">送料</div>
      <div class="col"><%= @order.postage.to_s(:delimited) %>円</div>
    </div>
    <div class="row">
      <div class="col">請求金額合計</div>
      <div class="col"><%= @order.total_payment.to_s(:delimited) %>円</div>
    </div>
  </div>
</div>