<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">ジャンル一覧・追加</h5>
</div>
<div class="container ml-sm-4">
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="form-group row">
      <%= f.label :name, "ジャンル名", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "col-sm-4" %>
      <%= f.submit "新規登録", class: "btn btn-success col-sm-2 offset-1" %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-6">
      <table class="table border-bottom">
        <thead class="thead-light">
          <tr>
            <th class="text-center">ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>