<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">管理者ログイン</h5>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-sm-3 offset-sm-1 col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "col-sm-7" %>
    </div>
    <div class="form-group row">
      <%= f.label :password, "パスワード", class: "col-sm-3 offset-sm-1 col-form-label " %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-7" %>
    </div>
    <div class="form-group row">
      <%= f.submit "ログイン", class: "btn btn-primary col-sm-3 offset-sm-4 mt-3" %>
    </div>
  <% end %>
  <%= render "admin/shared/links" %>
</div>
