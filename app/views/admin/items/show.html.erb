<div class="container">
  <h5 class="d-inline-block bg-light my-4 px-3">商品詳細</h5>
</div>
<div class="container ml-md-4">
  <div class="row">
    <div class="col-md-6 col-lg-5">
      <%= image_tag @item.get_image(300, 300), class: "img-fluid pr-4" %>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-4">
          <p>商品名</p>
        </div>
        <div class="col-8">
          <%= @item.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <p>商品説明</p>
        </div>
        <div class="col-8">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <p>ジャンル</p>
        </div>
        <div class="col-8">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <p>税込価格<br>(税抜価格)</p>
        </div>
        <div class="col-8">
          <%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <p>販売ステータス</p>
        </div>
        <div class="col-8">
          <div class="<%= @item.is_active ? "text-success" : "text-secondary" %>"><%= @item.is_active ? "販売中" : "販売停止中" %></div>
        </div>
      </div>
      <div class="row">
        <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success col-4 offset-2" %>
      </div>
    </div>
  </div>
</div>