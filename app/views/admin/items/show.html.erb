<h1>商品詳細</h1>
<%= image_tag @item.get_image(300, 300) %>
<table>
  <tbody>
    <tr>
      <td>
        <p>商品名</p>
      </td>
      <td>
        <%= @item.name %>
      </td>
    </tr>
    <tr>
      <td>
        <p>商品説明</p>
      </td>
      <td>
        <%= @item.introduction %>
      </td>
    </tr>
    <tr>
      <td>
        <p>ジャンル</p>
      </td>
      <td>
        <%= @item.genre.name %>
      </td>
    </tr>
    <tr>
      <td>
        <p>税込価格<br>(税抜価格)</p>
      </td>
      <td>
        <%= @item.with_tax_price %>(<%= @item.price %>)
      </td>
    </tr>
    <tr>
      <td>
        <p>販売ステータス</p>
      </td>
      <td>
        <%= @item.is_active ? "販売中" : "販売停止中" %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>